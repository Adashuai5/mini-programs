/**index.wxss**/

/** 修改默认的navigator点击态 **/

.change {
  color: #808695;
  font-size: 24rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}

.change .icon-down {
  color: #808695;
  font-size: 20rpx;
}

.input-area {
  background-color: #fff;
}

.input-area .textarea-wrapper {
  border-bottom: 2rpx solid #c7cee0;
  display: flex;
}

.input-area textarea {
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}

.input-area .textarea-wrapper .icon-close {
  background-color: #fff;
  font-size: 28rpx;
  padding-top: 40rpx;
  width: 48px;
  box-sizing: border-box;
  text-align: center;
}

.input-area .text-title {
  font-size: 28rpx;
  color: #8995a1;
}

.input-area .text-area {
  background-color: #fff;
  padding: 40rpx;
  min-height: 80rpx;
  display: flex;
  flex-direction: column;
}

.input-area .text-area .translation{
  padding: 20rpx 0;
}
